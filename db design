db design:

USERS: 
id UUID
username varchar
password varchar

USER AUTH
iduser fk to users id
attemptAt timestamp
issuccess

CREATE EXTENSION IF NOT EXISTS "uuid-ossp";

CREATE TABLE "USERS"(
	"ID" UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
	"USERNAME" VARCHAR(20),
	"PASSWORD" VARCHAR(20)
);

CREATE TABLE USERS_AUTH(
	"ID_USERS" UUID PRIMARY KEY REFERENCES "USERS"("ID"),
	"ATTEMPT_AT" TIMESTAMP DEFAULT NOW(),
	"IS_SUCCESS" BOOLEAN
);

DROP TABLE "USERS";
DROP TABLE "USERS_AUTH";
DROP EXTENSION "uuid-ossp";




CREATE TYPE STATUS AS ENUM ('PENDING', 'ON-WORK', 'DONE');


CREATE TABLE "LISTS"(
	"ID_USER" UUID REFERENCES "USERS"("ID") NOT NULL,
	"TASK" VARCHAR(55) NOT NULL,
	"STATUS" STATUS NOT NULL,
	"DUE" TIMESTAMP
);

DROP TABLE "LISTS";
DROP TYPE STATUS;
